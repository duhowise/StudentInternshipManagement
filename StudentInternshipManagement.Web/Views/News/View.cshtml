@model StudentInternshipManagement.Models.Entities.News
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Homepage - Trang quản lý thực tập";
    string message = ViewBag.Message ?? string.Empty;
}

@section Kendo {
    @Styles.Render("~/Content/kendo/styles")
    @Scripts.Render("~/Scripts/kendo/scripts")
}

<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
        </ul><!-- /.breadcrumb -->


    </div>

    <div class="page-content">
        <div class="container">
            <div class="page-header">
                <h1 id="newslist-header">
                    Tin tức - Thông báo
                </h1>
            </div>
            <div class="row">
                <h1>@Model.Title</h1>
                <h3>@Model.Time</h3>
                <p>@Model.Content</p>
            </div>
        </div>
    </div><!-- /.page-content -->

</div>
