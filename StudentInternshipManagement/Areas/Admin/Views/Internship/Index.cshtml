@using Kendo.Mvc.UI
@using Models
@{
    ViewBag.Title = "Quản lý thực tập";
    ViewBag.Category = "Quản lý";
    ViewBag.Section = "Thực tập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Kendo
{
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/Script/kendo")
}

@(Html.Kendo().Grid<Models.Internship>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.InternshipId);
          columns.ForeignKey(p => p.StudentId, (IQueryable<Student>) ViewBag.Students, "StudentId", "StudentName").EditorTemplateName("StudentTemplate");
          columns.Bound(p => p.ClassId).EditorTemplateName("LearningClassTemplate");
          columns.Bound(p => p.TrainingMajorId).EditorTemplateName("TrainingMajorCascadeTemplate");
          columns.Bound(p => p.CompanyId).EditorTemplateName("CompanyCascadeTemplate");
          columns.Bound(c => c.RegistrationDate);
          columns.Bound(c => c.Status);
          columns.Command(command =>
          {
              command.Edit();
              command.Destroy();
          }).Width(180);
      })
      .ToolBar(toolbar =>
      {
          toolbar.Create();
          toolbar.Pdf();
      })
      .Editable(editable => editable.Mode(GridEditMode.PopUp))
      .Pageable()
      .Sortable(sortable => { sortable.SortMode(GridSortMode.SingleColumn); })
      .Filterable(filterable => filterable.Mode(GridFilterMode.Row))
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Model(model => model.Id(p => p.InternshipId))
          .Read(read => read.Action("Internships_Read", "Internship"))
          .Create(create => create.Action("Internships_Create", "Internship"))
          .Update(update => update.Action("Internships_Update", "Internship"))
          .Destroy(destroy => destroy.Action("Internships_Destroy", "Internship"))
      )
      .Events(events => events
          .Edit("onEdit")
      )
      )
<script type="text/javascript">

    function onEdit(e) {
        $('[name="InternshipId"]').attr("readonly", true);
    }
</script>

<script>
    function filterClass() {
        return {
            classId: $("#ClassId").val()
        };
    }
</script>

<script>
    function filterCompany() {
        return {
            companyId: $("#CompanyId").val()
        };
    }
</script>