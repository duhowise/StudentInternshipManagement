@using System.Security.Claims
@using Microsoft.AspNet.Identity
@using Services
@if (Request.IsAuthenticated)
            {
                var username = User.Identity.GetUserName();
                var role = ((ClaimsIdentity)User.Identity).Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).FirstOrDefault();
                var avatar = string.Empty;
                switch (role)
                {
                    case "Student":
                        avatar = new StudentService().GetById(username).Avatar;
                        break;
                    default:
                        avatar = "avatar.png";
                        break;
                }


    <ul class="nav ace-nav">
        <li class="light-blue dropdown-modal">
            <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                <img class="nav-user-photo" src='~/@($"Images/avatars/{avatar}")'  alt='@($"{username}'s photo")' />
                <span class="user-info">
                    <small>Chào mừng,</small>
                    @username
                </span>

                <i class="ace-icon fa fa-caret-down"></i>
            </a>

            <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                <li>
                    <a href='@($"/{role}/Profile/Index")'>
                        <i class="ace-icon fa fa-user"></i>
                        Profile
                    </a>
                </li>
                <li>
                    <a href='/Account/ChangePassword'>
                        <i class="ace-icon fa fa-cog"></i>
                        Đổi mật khẩu
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="ace-icon fa fa-power-off"></i>
                        Đăng xuất
                    </a>
                </li>
            </ul>
        </li>
    </ul>
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
