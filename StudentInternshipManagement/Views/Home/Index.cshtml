@using System.Security.Claims
@using Microsoft.AspNet.Identity
@using Services
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Homepage - Internship management page";
    string message = ViewBag.Message ?? string.Empty;
}
@{
    var role = string.Empty;
    if (Request.IsAuthenticated)
    {
        var username = User.Identity.GetUserName();
        role = ((ClaimsIdentity) User.Identity).Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).FirstOrDefault();
    }
}

@section Kendo {
    @Styles.Render("~/Content/kendo/2018.2.516/styles")
    @Scripts.Render("~/Scripts/kendo/2018.2.516/scripts")
}

<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
        </ul><!-- /.breadcrumb -->


    </div>

    <div class="page-content">
        <div class="container">
            <div class="page-header">
                <h1 id="newslist-header">
                    News - Notice
                </h1>
            </div>
            <div class="row">
                <div id="news-list">
                    <ul class="nav nav-tabs padding-12 tab-color-blue background-blue" id="myTab4">
                        <li class="active">
                            <a data-toggle="tab" href="#home" aria-expanded="true">Home</a>
                        </li>

                        <li class="" style='display: @(role.Equals("Student") ? "inline-block" : "none")'>
                            <a href="/Student/Profile" aria-expanded="false">Student</a>
                        </li>

                        <li class="" style='display: @(role.Equals("Teacher") ? "inline-block" : "none")'>
                            <a href="/Teacher/Profile" aria-expanded="false">Lecturers</a>
                        </li>

                        <li class="" style='display: @(role.Equals("Admin") ? "inline-block" : "none")'>
                            <a href="/Admin/Profile" aria-expanded="false">Ministry</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="home" class="tab-pane active">
                            @{ Html.RenderAction("Index", "News", new {areas = ""}); }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.page-content -->

    @(Html.Kendo().Dialog()
          .Name("messageDialog")
          .Title("Notification")
          .Content(message)
          .Width(400)
          .Modal(true)
          .Visible(!string.IsNullOrEmpty(message))
          .Actions(actions => { actions.Add().Text("OK"); })
          )
</div>